NAME		= philo
CC			= cc
CFLAGS		= -Wall -Wextra -Werror
SRCS		= main.c ft_atoi.c
OBJS		= main.o ft_atoi.o

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS)

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
